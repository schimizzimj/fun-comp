using namespace std;
#include "gfxnew.h"

class Board {
  public:
    Board();
    Board(int);
    ~Board();
    void play();
    void drawFrog(int x, int y, char orient);
    void drawLog(int x, int y);
    void drawCar(int x, int y);
    void drawBus(int x, int y);

  private:
    int win;
    int lives;
    char grid[15][15];
};
